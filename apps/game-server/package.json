{
    "name": "@tabletop-arena/game-server",
    "version": "1.0.0",
    "description": "npm init template for bootstrapping an empty Colyseus project",
    "main": "build/index.js",
    "private": true,
    "engines": {
        "node": ">= 16.13.0"
    },
    "scripts": {
        "start": "node build/src/index.js",
        "loadtest:myroom": "tsx loadtest/index.ts --room myroom --numClients 2",
        "loadtest:tictactoe": "tsx loadtest/index.ts --room tictactoe --numClients 1000",
        "build": "npm run clean && tsc",
        "clean": "rimraf build",
        "test": "mocha -r tsx test/**.test.ts --exit --timeout 15000",
        "lint": "prettier --write . && eslint ."
    },
    "license": "UNLICENSED",
    "dependencies": {
        "@colyseus/monitor": "^0.15.0",
        "@colyseus/playground": "^0.15.3",
        "@colyseus/tools": "^0.15.0",
        "colyseus": "^0.15.0",
        "dayjs": "^1.11.11",
        "express": "^4.18.2",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.8.0"
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.15.0",
        "@colyseus/testing": "^0.15.0",
        "@types/eslint": "^8.56.10",
        "@types/express": "^4.17.1",
        "@types/mocha": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "mocha": "^10.2.0",
        "prettier": "^3.3.2",
        "rimraf": "^5.0.0",
        "tsx": "^4.10.2",
        "typescript": "^5.0.4"
    }
}
