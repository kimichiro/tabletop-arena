{
    "name": "@tabletop-arena/game-server",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "start": "node build/src/index.js",
        "dev": "tsx --watch src/index.ts",
        "build": "tsc --project tsconfig.json",
        "test": "mocha -r tsx test/**.test.ts --exit --timeout 15000",
        "loadtest:myroom": "tsx loadtest/index.ts --room myroom --numClients 2",
        "loadtest:tictactoe": "tsx loadtest/index.ts --room tictactoe --numClients 1000",
        "lint": "prettier --write . && eslint ."
    },
    "dependencies": {
        "@colyseus/monitor": "^0.15.7",
        "@colyseus/playground": "^0.15.12",
        "@colyseus/tools": "^0.15.39",
        "colyseus": "^0.15.17",
        "dayjs": "^1.11.11",
        "express": "^4.19.2",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.8.0"
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.15.3",
        "@colyseus/testing": "^0.15.3",
        "@tabletop-arena/eslint-config": "^0.0.0",
        "@tabletop-arena/typescript-config": "^0.0.0",
        "@types/eslint": "^8.56.10",
        "@types/express": "^4.17.21",
        "@types/mocha": "^10.0.7",
        "@types/node": "^20.14.10",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "mocha": "^10.6.0",
        "prettier": "^3.3.3",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3"
    }
}
