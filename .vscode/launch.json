{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Game Server - App",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/tsx",
            "cwd": "${workspaceFolder}/apps/game-server",
            "args": ["watch", "src/index.ts"],
            "outFiles": ["${cwd}/**/*.js"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Game Server - Test",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "cwd": "${workspaceFolder}/apps/game-server",
            "args": ["-r", "tsx", "test/**.test.ts", "--exit", "--timeout", "15000"],
            "console": "integratedTerminal",
            "smartStep": true,
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TicTacToe Svelte - App",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/vite",
            "cwd": "${workspaceFolder}/apps/tictactoe-svelte",
            "args": ["dev"],
            "outFiles": ["${cwd}/**/*.js"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TicTacToe Svelte - Test",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/vitest",
            "cwd": "${workspaceFolder}/apps/tictactoe-svelte",
            "args": ["related", "${workspaceFolder}/${relativeFile}", "--run"],
            "console": "integratedTerminal",
            "smartStep": true,
            "autoAttachChildProcesses": true
        }
    ]
}
